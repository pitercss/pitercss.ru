<ol reversed class="postlist" style="counter-reset: start-from {{ postslist.length + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <article class="postlist-item-preview">
      <a href="{{ post.url | url }}" class="postlist-image"><img src="{{ post.data.image }}" alt="{{ post.data.title }}"></a>
      <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}pitercss_meetup {{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
      <footer class="postlist-item-preview__footer">
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate }}
        </time>
        {% for tag in post.data.tags %}
          {%- if tag != "posts" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </footer>
    </article>
  </li>
{% endfor %}
</ol>
